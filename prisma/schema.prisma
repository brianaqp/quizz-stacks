generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quizz {
  id        Int         @id @default(autoincrement())
  name      String?     @db.VarChar(255)
  questions Question[]
  entries   Entry[]
}

model Question {
  id        Int       @id @default(autoincrement())
  quizz_id  Int
  text      String
  value     Int
  options   Option[]
  quizz     Quizz     @relation(fields: [quizz_id], references: [id])

  @@map("Questions")
}

model Option {
  id          Int      @id @default(autoincrement())
  question_id Int
  content     String   @db.VarChar(255)
  question    Question @relation(fields: [question_id], references: [id])

  @@map("Options")
}

model Entry {
  id       Int     @id @default(autoincrement())
  quizz_id Int
  angular  Int
  vue      Int
  svelte   Int
  react    Int
  quizz    Quizz   @relation(fields: [quizz_id], references: [id])

  @@map("Entries")
}
